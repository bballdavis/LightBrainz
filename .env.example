# Ports
MB_WEB_PORT=5800
MB_SOLR_PORT=8983

# DB creds
MB_DB_NAME=musicbrainz
MB_DB_USER=abc
MB_DB_PASSWORD=abc
MB_DB_SSLMODE=disable

# Memory tunables
MB_DB_SHARED_BUFFERS=2GB
MB_DB_PRELOAD_LIBS=
MB_SOLR_HEAP=2g

# Bind-mount paths (host directories; defaults live in the project root)
# These are host paths relative to the project root. Change them to absolute
# paths if you want data stored elsewhere on the host.
MB_DB_DATA=./musicbrainz-db
MB_SOLR_DATA=./musicbrainz-search
MB_REDIS_DATA=./musicbrainz-redis
HA_OUTPUT_DIR=./hearring-aid-data

# MusicBrainz replication
# Obtain a token from MetaBrainz to enable replication packets
MB_REPLICATION_ACCESS_TOKEN=
# Replication type controls packet cadence; common values: hourly | daily
MB_REPLICATION_TYPE=hourly
# Whether to fetch and import dumps during initial bootstrap
MB_IMPORT_DUMPS=true
# Optional: override dumps source URL (PostgreSQL full export directory or file)
MB_DUMPS_URL=https://data.metabrainz.org/pub/musicbrainz/data/fullexport/LATEST

# Search indexing scope (minimize to avoid unnecessary indexing)
# Comma-separated entities: artist,release,label,recording,work,area,place,url,annotation,series,editor,tag
MB_INDEX_ENTITIES=artist,release

# Schedules
# Options for all three: daily | weekly | monthly | '' (run once) | a raw cron expression like "0 3 * * *"
# Note: If a raw cron expression is provided for HA_CRON_SCHEDULE, the container will use cron; otherwise it uses an internal sleep loop.
HA_CRON_SCHEDULE=weekly
REPLICATION_FREQUENCY=weekly
INDEX_FREQUENCY=weekly

# Feature toggles
# Disable to completely skip scheduled replication or indexing cycles
ENABLE_REPLICATION=true
ENABLE_INDEXING=true
